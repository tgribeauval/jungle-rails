<h1>Hi <%= @order.email %></h1>
    <p>
      Sample mail sent using smtp.
    </p>

    <div class="panel panel-default items">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="2">Product</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @order_total = 0 %>
          <% @order.line_items.each do |line_item| %>
            <%= render partial: 'item', :locals =>{line_item: line_item} %>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="3">
              TOTAL:
            </th>
            <th>
              <%= @order_total %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>
